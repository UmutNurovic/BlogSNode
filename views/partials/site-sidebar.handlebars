<div class="widget">
    <h3 class="mb-3">Categories</h3>
    <div class="widget-category">
        {{#each categories}}
        <a href="#">{{name}}<span>(7)</span></a>
        {{/each}}
    </div>
</div>



<!-- Posts sidebar -->
					<div class="widget">
						<h3 class="mb-3">Latest Posts</h3>

                            {{#each (limit posts 2)}}
						<!-- single post -->
						<div class="widget-post">
							<a href="{{_id}}">
								<img class="img-fluid" src="{{post_image}}">{{title}}
							</a>
							<ul class="blog-meta">
								<li>{{generateDate date 'MMM DD YYYY'}}</li>
							</ul>
						</div>
						<!-- /single post -->
                        {{/each}}

					
					</div>
					<!-- /Posts sidebar -->
				</aside>
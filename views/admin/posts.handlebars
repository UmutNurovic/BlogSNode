	<section class="page-image page-image-about md-padding">
		<h1 class="text-white text-center">Posts</h1>
	</section>



<div class="md-padding">
	<div class="container">
{{> admin}}
		<div class="clearfix"></div>
<div class="mb-5"></div>
<div class="row">

	<div class="col-md-8">
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Category Name</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				{{#each posts}}
				<tr>
					<td>{{title}}</td>
					<td>{{category.name}}</td>
					<td>
						<a class="btn btn-warning" href="/admin/posts/edit/{{_id}}">Edit</a>
					</td>
					<td><form action="/admin/posts/{{_id}}?_method=DELETE" method="POST">
							<input type="hidden" name="_method" value="DELETE" >
							<button type="submit"  class="btn btn-danger">DELETE</button>
						</form></td>
				</tr>
				
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
	</div>
</div>
